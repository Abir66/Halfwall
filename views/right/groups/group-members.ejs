<div class="right-box">
    <form action="/groups/group_id=<%= group.GROUP_ID %>/members" method="get" >
        <div class="heading" style="display: flex; justify-content: space-between;"> 
            <h3 style="font-size: 1.1rem;">Search & filter</h3>
            <% if (data.searched) { %>
                <a href="/groups/group_id=<%= group.GROUP_ID %>/members"><h5 class="text-muted" style="font-size: 1rem;">clear</h5></a>
            <% } %>            
        </div>


        <div class="search-bar">
            <i class="fa-solid fa-magnifying-glass" style="display: inblock;"></i>
            <input type="search" name = "group_members_search_term" placeholder="Search group members" <% if (data.search_term) { %> value = <%= data.search_term %> <% } %> >
        </div>

        <div class="subsection">
            <h4><i class="fa-solid fa-filter"></i>Filter</h4>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_members_filter" value="admins" id="group_members_filter_admins" <% if (data.member_filter.includes('admins')) { %> checked <% } %>>
                <label class="form-check-label" for="group_members_filter_admins">
                  Admins
                </label>
            </div>

            <% if (isMember || group.GROUP_PRIVACY === 'PUBLIC') { %>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_members_filter" value="members" id="group_members_filter_members" <% if (data.member_filter.includes('members')) { %> checked <% } %>>
                <label class="form-check-label" for="group_members_filter_members">
                  Members
                </label>
            </div>
            <% } %>
            
            <% if (isAdmin) { %>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_members_filter" value="pendings" id="group_members_filter_pendings" <% if (data.member_filter.includes('pendings')) { %> checked <% } %>>
                <label class="form-check-label" for="group_members_filter_pendings">
                  Pending members
                </label>
            </div>
            <% } %>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_members_filter" value="followings" id="group_members_filter_followings" <% if (data.member_filter.includes('followings')) { %> checked <% } %>>
                <label class="form-check-label" for="group_members_filter_followings">
                  Your followings
                </label>
            </div>
              
        </div>

        <div class="subsection">
            <h4><i class="fa-solid fa-filter"></i>Sort By</h4>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="group_members_sort_by" value="time_desc" id="group_members_search_time_desc" <% if (data.sort_by === "time_desc") { %> checked <% } %>>
                <label class="form-check-label" for="group_members_search_time_desc">
                  Newest first
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="group_members_sort_by" value="time_asc" id="group_members_search_time_asc" <% if (data.sort_by === "time_asc") { %> checked <% } %>>
                <label class="form-check-label" for="group_members_search_time_asc">
                    Oldest first
                </label>
              </div>

              <div class="form-check">
                <input class="form-check-input" type="radio" name="group_members_sort_by" value="name" id="group_members_search_name" <% if (data.sort_by === "name") { %> checked <% } %>>
                <label class="form-check-label" for="group_members_search_name">
                    Name
                </label>
              </div>

        </div>
        <button type="submit" class="btn btn-primary" style="width:100% ; margin-top: 1rem;">Search</button>

    </form>
</div>