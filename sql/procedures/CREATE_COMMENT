CREATE OR REPLACE PROCEDURE "CREATE_COMMENT" (Q_POST_ID IN NUMBER, Q_USER_ID IN NUMBER, Q_TEXT IN VARCHAR2, Q_IMAGE IN VARCHAR2, RESULT OUT VARCHAR2, R_COMMENT_ID OUT NUMBER)
AS
BEGIN
	
	R_COMMENT_ID := COMMENT_SEQ.NEXTVAL;
	
	INSERT INTO COMMENTS(COMMENT_ID, POST_ID, USER_ID, TEXT, IMAGE, TIMESTAMP)
	VALUES(R_COMMENT_ID, Q_POST_ID, Q_USER_ID, Q_TEXT, Q_IMAGE, CURRENT_TIMESTAMP);
	
	RESULT := 'success';
	
EXCEPTION
    WHEN OTHERS THEN
        RESULT := 'something went wrong';
	
END;