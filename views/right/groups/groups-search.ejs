<a href="/groups/create-group/"><div class="btn btn-primary", style="width: 100%; margin-bottom: 1rem;">+ Create Group</div></a>

<div class="right-box">
    <form action = "/groups" method = "get" >
        <div class="heading" style="display: flex; justify-content: space-between;"> 
            <h3 style="font-size: 1.1rem;">Search & filter</h3>
            <% if (data.searched) { %>
                <a href="/groups/"><h5 class="text-muted" style="font-size: 1rem;">clear</h5></a>
            <% } %>            
        </div>


        <div class="search-bar">
            <i class="fa-solid fa-magnifying-glass" style="display: inblock;"></i>
            <input type="search" name = "group_search_term" placeholder="Search groups" <% if (data.search_term) { %> value = <%= data.search_term %> <% } %> >
        </div>

        <div class="subsection">
            <h4>Group type</h4>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_privacy" value="PUBLIC" id="group_privacy_public" <% if (data.filter === "public") { %> checked <% } %>>
                <label class="form-check-label" for="group_privacy_public">
                  Public
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_privacy" value="PRIVATE" id="group_privacy_private" <% if (data.filter === "private") { %> checked <% } %>>
                <label class="form-check-label" for="group_privacy_private">
                  Private
                </label>
              </div>
        </div>


        <div class="subsection">
            <h4></i>Membership</h4>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_membership" value="member" id="group_membership_your_groups" <% if (data.group_membership.includes("Your Groups")) { %> checked <% } %>>
                <label class="form-check-label" for="group_membership_your_groups">
                  Your Groups
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_membership" value="pending" id="group_membership_pending" <% if (data.group_membership.includes("Your Groups")) { %> checked <% } %>>
                <label class="form-check-label" for="group_membership_pending">
                  Pending Join Requests
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_membership" value="admin" id="group_membership_admin" <% if (data.group_membership.includes("Your Groups")) { %> checked <% } %>>
                <label class="form-check-label" for="group_membership_admin">
                  Your Adminships
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="group_membership" value="all_groups" id="group_membership_all_groups" <% if (data.group_membership.includes("Your Groups")) { %> checked <% } %>>
                <label class="form-check-label" for="group_membership_all_groups">
                  All Groups
                </label>
            </div>
              
        </div>


        <div class="subsection">
            <h4></i>Sort By</h4>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="group_sort_by" value="group_creation_time" id="group_sort_creation_time" <% if (data.sort_by === "creation_time") { %> checked <% } %>>
                <label class="form-check-label" for="group_search_sortByTime">
                  Group Creation Time
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="group_sort_by" value="popularity" id="group_sort_member_count" <% if (data.sort_by === "member_count") { %> checked <% } %>>
                <label class="form-check-label" for="group_search_popularity">
                  Member Count
                </label>
              </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:100% ; margin-top: 1rem;">Search</button>

    </form>
</div>