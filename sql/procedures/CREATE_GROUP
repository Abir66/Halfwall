CREATE OR REPLACE PROCEDURE "CREATE_GROUP" (NEW_GROUP_NAME IN VARCHAR2, NEW_ADMIN_ID IN NUMBER, NEW_DESCRIPTION IN VARCHAR2, NEW_COVER_PHOTO IN VARCHAR2, NEW_GROUP_PRIVACY IN VARCHAR2, RESULT OUT VARCHAR2)
AS
	NEW_GROUP_ID NUMBER;
BEGIN
	NEW_GROUP_ID := GROUP_SEQ.NEXTVAL;
	INSERT INTO GROUPS
	VALUES (NEW_GROUP_ID, NEW_GROUP_NAME, NEW_GROUP_PRIVACY, NEW_DESCRIPTION, NEW_COVER_PHOTO, 		CURRENT_TIMESTAMP);
	
	INSERT INTO GROUP_ADMINS VALUES(NEW_GROUP_ID, NEW_ADMIN_ID, CURRENT_TIMESTAMP);
	INSERT INTO GROUP_MEMBERS VALUES(NEW_GROUP_ID, NEW_ADMIN_ID, CURRENT_TIMESTAMP);
	RESULT := 'success';

EXCEPTION
    WHEN OTHERS THEN
        RESULT := 'please enter the fields correctly';
END;