CREATE OR REPLACE FUNCTION "IS_GROUP_MEMBER" (Q_GROUP_ID IN NUMBER, Q_USER_ID IN NUMBER)
RETURN NUMBER
AS
	ROW_COUNT NUMBER;
BEGIN
	SELECT COUNT(*) INTO ROW_COUNT FROM GROUP_MEMBERS 
	WHERE GROUP_ID = Q_GROUP_ID AND USER_ID = Q_USER_ID;
	
	IF ROW_COUNT > 0 THEN
		RETURN 1;
	ELSE
		RETURN 0;
	END IF;
	RETURN 0;
END;